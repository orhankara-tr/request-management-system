@using PagedList
@using PagedList.Mvc
@using EntityLayer.Concrete
@model PagedList.IPagedList<Request>

@{
    ViewBag.Title = "Talepler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-3 align-items-center">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark font-weight-bold">
                    <i class="fas fa-clipboard-list mr-2 text-primary"></i>Talepler
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    @using (Html.BeginForm("Index", "Request", FormMethod.Get, new { @class = "form-inline", id = "filterForm" }))
    {
        <div class="form-group mr-2">
            <label for="startDate" class="mr-2 font-weight-normal mb-0 text-dark">Başlangıç Tarihi: </label>
            @{
                var startVal = ViewBag.StartDate != null ? ViewBag.StartDate.ToString() : "";
            }
            <input type="date" id="startDate" name="startDate"
                   value="@startVal"
                   class="form-control" style="width: 150px;" />
        </div>
        <div class="form-group mr-2">
            <label for="endDate" class="mr-2 font-weight-normal mb-0 text-dark">Bitiş Tarihi:</label>
            @{
                var endVal = ViewBag.EndDate != null ? ViewBag.EndDate.ToString() : "";
            }
            <input type="date" id="endDate" name="endDate"
                   value="@endVal"
                   class="form-control" style="width:150px;" />
        </div>
        <button type="submit" class="btn btn-primary mr-1">
            <i class="fas fa-search"></i> Filtrele
        </button>
        <a href="@Url.Action("Index", "Request")" class="btn btn-secondary">
            <i class="fas fa-times"></i> Temizle
        </a>
    }
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary shadow">
            <div class="card-body p-0">
                <table class="table table-hover table-valign-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 50px" class="text-center">#</th>
                            <th>Talep No</th>
                            <th>Başlık</th>
                            <th class="text-center">Tür</th>
                            <th class="text-center">Öncelik</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">Tarih</th>
                            <th style="width: 150px;" class="text-right">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var req in Model)
                        {
                            <tr>
                                <td class="text-center">@req.RequestId</td>
                                <td>
                                    <span class="badge badge-secondary" style="font-size:0.98em">@req.RequestNo</span>
                                </td>
                                <td>@req.Title</td>
                                <!-- Tür Badge -->
                                <td class="text-center">
                                    @{
                                        string turClass = "badge";
                                        string turText = ((RequestType)req.RequestTypeId).ToString();
                                        switch ((RequestType)req.RequestTypeId)
                                        {
                                            case RequestType.HataRaporu:
                                                turClass += " badge-primary";
                                                turText = "Hata Raporu";
                                                break;
                                            case RequestType.Destek:
                                                turClass += " badge-warning";
                                                turText = "Destek";
                                                break;
                                            case RequestType.OzellikTalebi:
                                                turClass += " badge-info";
                                                turText = "Özellik Talebi";
                                                break;
                                            default:
                                                turClass += " badge-secondary";
                                                turText = "Bilinmiyor";
                                                break;
                                        }
                                    }
                                    <span class="@turClass">@turText</span>
                                </td>
                                <!-- Öncelik Badge -->
                                <td class="text-center">
                                    @{
                                        string priorityClass = "badge";
                                        string priorityText = ((Priority)req.PriorityId).ToString();
                                        switch ((Priority)req.PriorityId)
                                        {
                                            case Priority.Yuksek:
                                                priorityClass += " badge-danger";
                                                priorityText = "Yüksek";
                                                break;
                                            case Priority.Orta:
                                                priorityClass += " badge-warning";
                                                priorityText = "Orta";
                                                break;
                                            case Priority.Dusuk:
                                                priorityClass += " badge-secondary";
                                                priorityText = "Düşük";
                                                break;
                                            default:
                                                priorityClass += " badge-secondary";
                                                priorityText = "Bilinmiyor";
                                                break;
                                        }
                                    }
                                    <span class="@priorityClass">@priorityText</span>
                                </td>
                                <!-- Durum Badge -->
                                <td class="text-center">
                                    @{
                                        string statusClass = "badge";
                                        string statusText = "";
                                        switch ((RequestStatus)req.StatusId)
                                        {
                                            case RequestStatus.Onaylandi:
                                                statusClass += " badge-success";
                                                statusText = "Onaylandı";
                                                break;
                                            case RequestStatus.Taslak:
                                                statusClass += " badge-info";
                                                statusText = "Taslak";
                                                break;
                                            case RequestStatus.OnayBekliyor:
                                                statusClass += " badge-warning";
                                                statusText = "Onay Bekliyor";
                                                break;
                                            case RequestStatus.Reddedildi:
                                                statusClass += " badge-danger";
                                                statusText = "Reddedildi";
                                                break;
                                            default:
                                                statusClass += " badge-secondary";
                                                statusText = "Bilinmiyor";
                                                break;
                                        }
                                    }
                                    <span class="@statusClass">@statusText</span>
                                </td>
                                <td class="text-center">@req.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td class="text-right px-4">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", "Request", new { id = req.RequestId })"
                                           class="btn btn-default btn-sm border shadow-sm"
                                           title="Detay">
                                            <i class="fas fa-eye text-primary"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white">
                @Html.PagedListPager(Model, page => Url.Action("Index", new
                {
                    page = page,
                    startDate = ViewBag.StartDate,
                    endDate = ViewBag.EndDate
                }), new PagedListRenderOptions
                {
                    LiElementClasses = new List<string> { "page-item" },
                    UlElementClasses = new List<string> { "pagination pagination-sm m-0 float-right" }
                })
            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function SubmitConfirm(id) {
        swal({
            title: "Onaya Gönderilsin mi?",
            text: "Onaya gönderilen talep üzerinde değişiklik yapılamaz.",
            icon: "info",
            buttons: ["Vazgeç", "Gönder"],
        }).then((willSubmit) => {
            if (willSubmit) {
                window.location.href = "/Request/Submit/" + id;
            }
        });
    }
</script>