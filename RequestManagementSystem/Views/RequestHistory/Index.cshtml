@model List<EntityLayer.Concrete.RequestHistory>

@{
    ViewBag.Title = "Kayıt Geçmişi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kayıt Geçmişi</h3>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
                    <table class="table table-striped table-bordered table-hover mb-0">
                        <thead style="position: sticky; top: 0; background: #fff; z-index: 1;">
                            <tr>
                                <th>Tarih</th>
                                <th>TalepId</th>
                                <th>KullanıcıId</th>
                                <th>İşlem</th>
                                <th>Alan</th>
                                <th>Eski</th>
                                <th>Yeni</th>
                                <th>Not</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var h in Model)
                            {
                                <tr>
                                    <td>@h.CreatedDate</td>
                                    <td>@h.RequestId</td>
                                    <td>@h.UserId</td>
                                    <td>@h.Action</td>
                                    <td>@h.FieldName</td>
                                    <td>@h.OldValue</td>
                                    <td>@h.NewValue</td>
                                    <td>@h.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</section>