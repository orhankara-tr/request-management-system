@model EntityLayer.Concrete.User

<div class="container mt-4">

    <h3>Yeni Kullanıcı Ekle</h3>
    <hr>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="row">

                    <!-- Sol Sütun -->
                    <div class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(x => x.Username, "Kullanıcı Adı *")
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı adı" })
                            @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, "Email *")
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "email@example.com" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.RoleId, "Rol *")
                            @Html.DropDownListFor(x => x.RoleId,
                                new SelectList(new[] {
                                    new { Value = 1, Text = "Kullanıcı" },
                                    new { Value = 2, Text = "Yönetici" },
                                    new { Value = 3, Text = "Admin" }
                                }, "Value", "Text"),
                                "-- Rol Seçin --",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RoleId, "", new { @class = "text-danger small" })
                        </div>

                    </div>

                    <!-- Sağ Sütun -->
                    <div class="col-md-6">

                        <div class="form-group">
                            @Html.LabelFor(x => x.FullName, "Ad Soyad *")
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", placeholder = "Ad soyad" })
                            @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.PasswordHash, "Şifre *")
                            @Html.PasswordFor(x => x.PasswordHash, new { @class = "form-control", placeholder = "Şifre" })
                            @Html.ValidationMessageFor(x => x.PasswordHash, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            <label>Durum</label>
                            <div class="form-check mt-2">
                                @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input", id = "IsActive" })
                                <label class="form-check-label" for="IsActive">Aktif</label>
                            </div>
                        </div>

                    </div>

                </div>

                <hr>

                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
            }

        </div>
    </div>

</div>